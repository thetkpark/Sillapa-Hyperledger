/**
 * A business network where members can grant/revoke access to their personal information to other members
 */
namespace org.acme.pii

enum status {
  o PASSED
  o FAILED
  o ONGOING
}

participant adminRegistrar identified by email {
  o String email
  o String firstName
  o String lastName
}


participant registrar identified by email {
  o String email
  o String firstName
  o String lastName
}

participant teacher identified by email {
  o String email
  o String firstName
  o String lastName
}

participant student identified by studentID {
  o String studentID
  o String email
  o String firstName
  o String lastName
  o DateTime dateReg 
  o DateTime dateGrad optional
  o Boolean graduated
  o Integer creditRequire
}

asset studentCredit identified by creditID {
  o String creditID
  o Integer[] credit optional
  o Integer creditCount
  --> student student
}

asset contract identified by contractID{
  o String contractID
  o Integer credit
  o status status
  o String studentID
  --> student student
  --> teacher teacher
}

transaction demoSetUp {

}

transaction creditApproval {
  --> studentCredit studentCredit
  --> contract contract
  o DateTime timeStamp
}

transaction graduateCheck {
  --> student student
  --> studentCredit studentCredit
  o DateTime timeStamp
}

transaction createContract {
  o String contractID
  o Integer credit
  --> student student
  --> teacher teacher
}

transaction deleteContract {
  --> contract contract
}


